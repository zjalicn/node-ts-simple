{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2023",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": ["node"],
    "sourceMap": true,
    "esModuleInterop": false
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
